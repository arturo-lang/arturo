setBits: function [inp, n][
    e: size inp
    print "n = " ++ (to :string n) ++ "; Width e = " ++ (to :string e) ++ ":"

    result: new Ã¸
    if? or? zero? e n =< 0 -> result: inp
    else [
        result: split inp
        loop 0..e-1 'i [
            if inp\[i] = '1' [
                j: i + 1
                while [and? j =< i+n j < e][
                    result\[j]: '1'
                    j: j + 1
                ]
            ]
        ]
        result: join result
    ]

    print ["\tinput  :" inp]
    print ["\tresult :" result]
]

