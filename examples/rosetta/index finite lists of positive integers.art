rank: function [arr][
    if empty? arr -> return 0
    from.binary "1" ++ join.with:"0" map arr 'a -> repeat "1" a
]

unrank: function [rnk][
    if rnk=1 -> return [0]
    bn: as.binary rnk 
    map split.by:"0" slice bn 1 dec size bn => size
]

l: [1, 2, 3, 5, 8]

print ["The initial list:" l]

r: rank l
print ["Ranked:" r]

u: unrank r
print ["Unranked:" u]