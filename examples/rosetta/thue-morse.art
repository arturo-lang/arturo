thueMorse: function [maxSteps][
    result: []
    val: [0]
    count: 0
    while [true][
        'result ++ join to [:string] val
        inc 'count
        if count = maxSteps -> return result
        val: val ++ map val 'v -> 1 - v
    ]
    return result
]
loop thueMorse 6 'bits ->
    print bits