camelToSnake: function [str][
    i: new 0
    result: new ""
    while [i < size str][
        ch: str\[i]
        if? upper? ch [
            'result ++ `_` ++ lower str\[i]
        ]
        else [
            'result ++ str\[i]
        ]

        inc 'i
    ]
    return result
]

snakeToCamel: function [str][
    i: new 0
    result: new ""
    while [i < size str][
        ch: str\[i]
        if? and? [ch=`_`][(i+1) < size str] [
            'result ++ upper str\[i+1]
            inc 'i
        ]
        else [
            'result ++ str\[i]
        ]

        inc 'i
    ]
    return result
]

