s: "s"

loop 99..1 'i [
    print ~"|i| bottle|s| of beer on the wall,"
    print ~"|i| bottle|s| of beer"
    print ~"Take one down, pass it around!"
    if 1=i-1 -> s: ""

    switch i>1 [
        print ~"|i-1| bottle|s| of beer on the wall!"
        print ""
    ] -> print "No more bottles of beer on the wall!"
]