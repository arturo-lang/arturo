name: "fold"
type: :function
module: "Iterators"
description: "left-fold given collection returning accumulator"
returns: [
        :null
         :block
         :nothing
    ]
examples: [
        {
            fold 1..10 [x,y]-> x + y
            ; => 55 (1+2+3+4..) 
        }
         {
            fold 1..10 .seed:1 [x,y][ x * y ]
            ; => 3628800 (10!) 
        }
         {
            fold 1..3 [x y]-> x - y
            ; => -6
        }
         {
            fold.right 1..3 [x y]-> x - y
            ; => 2
        }
    ]
attributes: #[
    seed: #[
        types: [
                :any
            ]
        description: "use specific seed value"
        ]
    right: #[
        types: [
                :logical
            ]
        description: "perform right folding"
        ]
    ]
arguments: #[
    collection: [
            :literal
             :block
        ]
    params: [
            :literal
             :block
        ]
    action: [
            :block
        ]
    ]
related: [
        "Iterators/loop"
         "Iterators/select"
         "Iterators/filter"
         "Collections/flatten"
    ]