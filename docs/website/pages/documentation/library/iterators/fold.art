name: "fold"
address: "0x10D5C1408"
type: :function
module: "Iterators"
returns: [
        :null
         :block
         :nothing
    ]
description: "flatten given collection by eliminating nested blocks"
example: {
        fold 1..10 [x,y]-> x + y
        ; => 55 (1+2+3+4..) 
        
        fold 1..10 .seed:1 [x,y][ x * y ]
        ; => 3628800 (10!) 
        
        fold 1..3 [x y]-> x - y
        ; => -6
        
        fold.right 1..3 [x y]-> x - y
        ; => 2
    }
